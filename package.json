    "@types/node": "^13.5.0",
    "@types/storybook__react": "^5.2.1",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.6",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "jest": "^25.1.0",
    "jest-enzyme": "^7.1.2",
    "react-dom": "^16.12.0",
    "ts-jest": "^25.0.0",
    "typescript": "^3.7.5"
